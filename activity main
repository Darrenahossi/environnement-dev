        android:text="Click me!"
        android:onClick="myFancyMethod" />

    <ImageView
    android:id="@+id/Image1"
    android:layout_width="400dp"
    android:layout_height="400dp"
    android:src="@drawable/telechargement"
    tools:layout_editor_absoluteX="5dp"
